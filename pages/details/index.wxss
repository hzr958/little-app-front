.swiper_box {
    width: 100%;
    height: 320px;
}
.swiper_box .slide-image{
    width: 100%;
    height: 100%;
    display: inline-block;
    overflow: hidden;
}


.story-content {
    line-height: 1.5;
    font-size: 14px;
    color: #363636;
}

.story-title {
    width: 100%;
    margin-top: 60rpx;
    margin-bottom: 40rpx;
    font-size: 20px;
}

.movie-story {
    padding: 0 15px;
    background-color: #e2e2e2;
}

.story-author {
    position: relative;
    font-size: 14px;
    color: #333;
}

.split {
    width: 150rpx;
    height: 6rpx;
    margin-top: 20rpx;    
    margin-bottom: 30rpx;
    background: #333;    
}